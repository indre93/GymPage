<% if object.try(:errors).try(:any?) %>
   <div class="error_explanation">
         <h4><%= object.class %></h4>
         <strong>contains <%= pluralize(object.errors.count, "error") %>:</strong>
      <ol>
         <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ol>
   </div>
<% elsif flash[:error] %>
   <p class="error_explanation"><%= flash[:error] if flash[:error] %></p>
<% elsif flash[:message] %>
   <p class="message_explanation"><%= flash[:message] if flash[:message] %></p>
<% else @error %>
   <p class="<%= "error_explanation" if @error %>"><%= @error %></p>
<% end %>
