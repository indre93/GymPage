<!DOCTYPE html>
<html>
  <head>
    <title>GymPage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class=nav-bar>
    <%= link_to "Home", root_path %> 
    <%= link_to "Log In", login_path if !logged_in? %>
    <%= link_to "Sign Up", new_user_path if !logged_in? %>
    <%= link_to "#{current_user.name}'s profile", current_user if logged_in? %>
    <%= link_to "Log Out", logout_path if logged_in? %>
  </div>
  
  <body>
    <%= yield %>
  </body>
</html>
