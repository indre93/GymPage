<h1>Add a New Workout:</h1>

<%= form_for(@workout) do |f| %>
  <div>
    <%= f.label "Date Worked Out" %>
    <%= f.date_select :date_workedout, order: [:month, :day, :year] %><br><br>
  </div> 
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: "70", rows: "3" %><br>
  </div>
  <div>
    <p>Select existing exercise: </p>
    <%= f.collection_check_boxes :exercise_ids, Exercise.all, :id, :name %>
  </div>
  <div>
    <p>Or add new exercise: </p>
      <%= f.fields_for :exercises, @workout.exercises.build do |exercises_fields| %>
        <%= exercises_fields.label :name %>
        <%= exercises_fields.text_field :name %>
  
        <%= exercises_fields.label :upper_body? %>
        <%= exercises_fields.check_box :upper_body? %>

        <%= exercises_fields.label :lower_body? %>
        <%= exercises_fields.check_box :lower_body? %>

        <%= exercises_fields.label :cardio? %>
        <%= exercises_fields.check_box :cardio? %>

        <%= exercises_fields.hidden_field :user_id, value: current_user.id %>
      <% end %>
  </div>
  <br><br>

  <div class="submit">
    <%= f.submit "Add Workout" %>
  </div>
<% end %>