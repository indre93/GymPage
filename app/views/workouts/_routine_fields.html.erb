<div class="nested-fields">
   <div>
      <%= f.label :exercise_id, "Select Existing Exercise" %>
      <%= f.collection_select(:exercise_id, Exercise.by_name, :id, :name, include_blank: true) %>
   </div>

   <div>
      <%= f.fields_for :exercise do |ff| %>
         <%= ff.label :name, "Or Add New Exercise" %>
         <%= ff.text_field :name, placeholder: "Exercise name" %><br>
         
         <%= ff.label :category, "Category" %>
         <%= ff.select :category, options_for_select(category_options), include_blank: true %>
      <% end %>
   </div>

   <div>
      <%= f.label :caption, "Exercise Rotine" %>
      <%= f.text_field :caption %>
   </div>

   <div>
      <%= link_to_remove_association(f, data: { confirm: "Are you sure you want to delete this exercise routine?" }) do %>
         <svg class="bi bi-trash" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
         </svg>
      <% end %>
   </div>

   <hr>
</div>
