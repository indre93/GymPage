<h1>Sign Up!</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true %><br><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email, required: true %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %><br><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <br>
  
  <%= f.submit %>
<% end %>