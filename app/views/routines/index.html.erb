<h1>All Routines Completed</h1>

<div class="exercise-routine">
  <% @routines.order(created_at: :desc).each do |routine| %>
    <%= link_to routine_exercise(routine), exercise_path(routine.exercise) %><br>
    <%= link_to username(routine.workout.user), user_path(routine.workout.user) %> -
    <%= link_to workout_date(routine.workout), workout_path(routine.workout) %><br>
    "<%= routine.caption %>"
    <br><br>
  <% end %>
</div>