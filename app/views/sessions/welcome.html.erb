<h1>Welcome to GymPage!</h1>

<div class="center">
  <% if !logged_in? %>
    <%= link_to "Log In", login_path, method: :get %>
    Or
    <%= link_to "Sign Up", new_user_path, method: :get %>
  <% end %>
</div>

<div>
  <h2>Recent Workouts Posted: </h2>
  <% @workouts.order(created_at: :desc).each do |workout| %>
    <big><%= link_to full_name(workout.user), user_path(workout.user_id) %></big><br>
    <%= posted_at(workout) %><br><br>
    "<%= workout.description %>" -
    <%= link_to "See more", workout_path(workout.id) %><br><br><br>
  <% end %>
</div>   