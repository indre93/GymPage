<h1>Welcome to GymPage!</h1>

<div class="center">
  <% if !logged_in? %>
    <%= link_to "Log In", login_path, method: :get %>
    Or
    <%= link_to "Sign Up", new_user_path, method: :get %>
  <% end %>
</div>

<div>
  <h2>All Workouts Posted:</h2>
  <% @workouts.each do |workout| %>
    <%= link_to workout.formatted_date, workout_path(workout.id) %> -
    <%= link_to workout.user.first_name, user_path(workout.user_id) %> -
    <%= workout.description %><br><br>
  <% end %>
</div>   
