<h1>Add New Exercise</h1>

<div class="center"> 
  <%= form_for @exercise do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true, size: "40" %><br><br>

    <%= f.label :category %>
    <%= f.select :category, options_for_select(category_options), include_blank: true %><br>
    
    <br><br>

    <%= f.submit "Add Exercise" %>
  <% end %>
</div>