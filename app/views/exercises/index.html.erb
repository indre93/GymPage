<h1>All Exercises</h1>

<div class="content">
   <%= render partial: "layouts/alerts", locals: { object: @routines } %>
   
   <div>
      <% @exercises.each do |exercise| %>
         <h4><%= link_to exercise.name, exercise %></h4>
         <h5><%= exercise.category %><h5>
         <h6><%= link_to "View routines", exercise_routines_path(exercise) %></h6>
         <br>
      <% end %>
   </div>
</div>